<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PHP Extensions - NexPanel</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
        body { font-family: 'Inter', sans-serif; background: #0F172A; color: #F1F5F9; margin: 0; display: flex; min-height: 100vh; }
        .sidebar { width: 260px; background: #1E293B; border-right: 1px solid rgba(255,255,255,0.05); display: flex; flex-direction: column; }
        .main-content { flex: 1; padding: 32px; overflow-y: auto; }
        .card { background: #1E293B; border: 1px solid rgba(255,255,255,0.05); border-radius: 12px; padding: 24px; margin-bottom: 24px; }
        .btn { padding: 8px 14px; border-radius: 6px; border: none; font-weight: 500; cursor: pointer; transition: all 0.2s; color: white; font-size: 13px;}
        .btn-primary { background: #6366F1; }
        .btn-primary:hover { background: #4F46E5; }
        .btn-danger { background: #EF4444; }
        .btn-danger:hover { background: #DC2626; }
        
        .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 16px; }
        .ext-card { background: #0F172A; padding: 16px; border-radius: 8px; border: 1px solid rgba(255,255,255,0.05); display: flex; justify-content: space-between; align-items: center; }
        .ext-name { font-weight: 600; font-size: 15px; }
        .ext-status { font-size: 12px; color: #94A3B8; margin-top: 4px; }
    </style>
</head>
<body>
    <%- include('partials/sidebar', { active: 'php' }) %>

    <div class="main-content">
        <h1 style="font-size: 24px; font-weight: 700; margin-bottom: 8px;">PHP Extensions</h1>
        <p style="color: #94A3B8; margin-bottom: 32px;">Manage installed modules for PHP <span id="phpVersion">...</span></p>

        <div class="card">
            <div id="loading" style="text-align: center; color: #94A3B8; padding: 32px;">Loading extensions...</div>
            <div id="extGrid" class="grid" style="display: none;"></div>
        </div>
    </div>

    <script>
        async function loadExtensions() {
            try {
                const res = await axios.get('/php-extensions/api/list');
                document.getElementById('phpVersion').textContent = res.data.version;
                document.getElementById('loading').style.display = 'none';
                
                const grid = document.getElementById('extGrid');
                grid.style.display = 'grid';
                grid.innerHTML = '';

                res.data.extensions.forEach(ext => {
                    const btnHtml = ext.installed
                        ? `<button class="btn btn-danger" onclick="toggleExt('${ext.name}', 'remove')">Uninstall</button>`
                        : `<button class="btn btn-primary" onclick="toggleExt('${ext.name}', 'install')">Install</button>`;
                    
                    grid.innerHTML += `
                        <div class="ext-card">
                            <div>
                                <div class="ext-name">${ext.name}</div>
                                <div class="ext-status" style="color: ${ext.installed ? '#34D399' : '#64748B'}">
                                    ${ext.installed ? 'Installed' : 'Not Installed'}
                                </div>
                            </div>
                            <div>${btnHtml}</div>
                        </div>
                    `;
                });

            } catch (err) {
                console.error(err);
                document.getElementById('loading').textContent = 'Failed to load extensions.';
            }
        }

        async function toggleExt(name, action) {
            const btn = event.target;
            const originalText = btn.innerText;
            btn.innerText = '...';
            btn.disabled = true;

            try {
                if (action === 'install') {
                    await axios.post('/php-extensions/api/install', { extension: name });
                } else {
                    if(!confirm(`Uninstall php-${name}? This might break sites using it.`)) {
                        btn.innerText = originalText;
                        btn.disabled = false;
                        return;
                    }
                    await axios.post('/php-extensions/api/remove', { extension: name });
                }
                loadExtensions(); // Refresh
            } catch (err) {
                alert('Action failed: ' + (err.response?.data?.error || err.message));
                btn.innerText = originalText;
                btn.disabled = false;
            }
        }

        loadExtensions();
    </script>
</body>
</html>
