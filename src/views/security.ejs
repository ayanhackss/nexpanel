<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Security - NexPanel</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
        body { font-family: 'Inter', sans-serif; background: #0F172A; color: #F1F5F9; margin: 0; display: flex; min-height: 100vh; }
        .sidebar { width: 260px; background: #1E293B; border-right: 1px solid rgba(255,255,255,0.05); display: flex; flex-direction: column; }
        .main-content { flex: 1; padding: 32px; overflow-y: auto; }
        .card { background: #1E293B; border: 1px solid rgba(255,255,255,0.05); border-radius: 12px; padding: 24px; margin-bottom: 24px; }
        .btn { padding: 10px 16px; border-radius: 8px; border: none; font-weight: 500; cursor: pointer; transition: all 0.2s; color: white; }
        .btn-primary { background: #6366F1; }
        .btn-primary:hover { background: #4F46E5; }
        .btn-danger { background: #EF4444; }
        .btn-danger:hover { background: #DC2626; }
        .btn-success { background: #10B981; }
        .btn-success:hover { background: #059669; }
        input, select { width: 100%; padding: 10px; background: #0F172A; border: 1px solid rgba(255,255,255,0.1); border-radius: 8px; color: white; margin-bottom: 16px; }
        table { width: 100%; border-collapse: collapse; }
        th { text-align: left; color: #94A3B8; font-weight: 500; padding: 12px; border-bottom: 1px solid rgba(255,255,255,0.1); }
        td { padding: 16px 12px; border-bottom: 1px solid rgba(255,255,255,0.05); }
        .status-badge { padding: 4px 10px; border-radius: 20px; font-size: 12px; font-weight: 500; display: inline-block; }
        .status-active { background: rgba(16, 185, 129, 0.1); color: #34D399; }
        .status-inactive { background: rgba(239, 68, 68, 0.1); color: #F87171; }
    </style>
</head>
<body>
    <%- include('partials/sidebar', { active: 'security' }) %>

    <div class="main-content">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 32px;">
            <div>
                <h1 style="font-size: 24px; font-weight: 700; margin-bottom: 8px;">Security / Firewall</h1>
                <div id="firewallStatus" style="font-size: 14px; color: #94A3B8;">Status: Checking...</div>
            </div>
            <div style="display: flex; gap: 12px;">
                <button id="toggleBtn" onclick="toggleFirewall()" class="btn btn-primary" style="display: none;">Enable Firewall</button>
                <button onclick="document.getElementById('addModal').style.display='flex'" class="btn btn-primary">
                    + Add Rule
                </button>
            </div>
        </div>

        <div class="card">
            <h3 style="margin-top: 0; margin-bottom: 20px;">Active Rules</h3>
            <table>
                <thead>
                    <tr>
                        <th width="30">#</th>
                        <th>To</th>
                        <th>Action</th>
                        <th>From</th>
                        <th style="text-align: right;">Actions</th>
                    </tr>
                </thead>
                <tbody id="ruleList">
                    <tr><td colspan="5" style="text-align: center; padding: 32px; color: #94A3B8;">Loading rules...</td></tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Add Modal -->
    <div id="addModal" style="display: none; position: fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.8); align-items:center; justify-content:center;">
        <div class="card" style="width: 400px; padding: 32px;">
            <h2 style="margin-top: 0;">Add Firewall Rule</h2>
            
            <label>Action</label>
            <select id="actionInput">
                <option value="allow">ALLOW</option>
                <option value="deny">DENY</option>
            </select>
            
            <label>Port</label>
            <input type="number" id="portInput" placeholder="80">
            
            <label>Protocol</label>
            <select id="protocolInput">
                <option value="tcp">TCP</option>
                <option value="udp">UDP</option>
            </select>

            <div style="display: flex; gap: 12px; margin-top: 16px;">
                <button class="btn btn-primary" onclick="addRule()" style="flex: 1;">Add Rule</button>
                <button class="btn" onclick="document.getElementById('addModal').style.display='none'" style="background: #334155; flex: 1;">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        let isEnabled = false;

        async function loadStatus() {
            try {
                const res = await axios.get('/security/api/firewall');
                
                const statusEl = document.getElementById('firewallStatus');
                const btnEl = document.getElementById('toggleBtn');
                const listEl = document.getElementById('ruleList');

                isEnabled = res.data.active;
                statusEl.innerHTML = `Status: <span class="status-badge ${isEnabled ? 'status-active' : 'status-inactive'}">${isEnabled ? 'Active' : 'Inactive'}</span>`;
                
                btnEl.style.display = 'block';
                btnEl.textContent = isEnabled ? 'Disable Firewall' : 'Enable Firewall';
                btnEl.className = isEnabled ? 'btn btn-danger' : 'btn btn-success';

                listEl.innerHTML = '';
                if (res.data.rules.length === 0) {
                    listEl.innerHTML = '<tr><td colspan="5" style="text-align: center; padding: 32px; color: #94A3B8;">No rules configured.</td></tr>';
                    return;
                }

                res.data.rules.forEach(rule => {
                    listEl.innerHTML += `
                        <tr>
                            <td>${rule.id}</td>
                            <td>${rule.to}</td>
                            <td><span style="color: ${rule.action.includes('ALLOW') ? '#34D399' : '#F87171'}">${rule.action}</span></td>
                            <td>${rule.from}</td>
                            <td style="text-align: right;">
                                <button class="btn btn-danger" onclick="deleteRule(${rule.id})" style="padding: 6px 12px; font-size: 13px;">Delete</button>
                            </td>
                        </tr>
                    `;
                });

            } catch (err) {
                console.error(err);
                alert('Failed to load firewall status');
            }
        }

        async function addRule() {
            const port = document.getElementById('portInput').value;
            const action = document.getElementById('actionInput').value;
            const protocol = document.getElementById('protocolInput').value;

            if(!port) return alert('Port is required');

            try {
                await axios.post('/security/api/firewall/add', { port, action, protocol });
                document.getElementById('addModal').style.display = 'none';
                document.getElementById('portInput').value = '';
                loadStatus();
            } catch (err) {
                alert('Failed to add rule');
            }
        }

        async function deleteRule(id) {
            if(!confirm('Delete this rule?')) return;
            try {
                await axios.post('/security/api/firewall/delete', { ruleId: id });
                loadStatus();
            } catch (err) {
                alert('Failed to delete rule');
            }
        }

        async function toggleFirewall() {
            if(!confirm(`Are you sure you want to ${isEnabled ? 'DISABLE' : 'ENABLE'} the firewall?`)) return;
            try {
                await axios.post('/security/api/firewall/toggle', { enable: !isEnabled });
                loadStatus();
            } catch (err) {
                alert('Failed to toggle firewall');
            }
        }

        loadStatus();
    </script>
</body>
</html>
