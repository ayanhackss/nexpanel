<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cron Jobs - NexPanel</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
        body { font-family: 'Inter', sans-serif; background: #0F172A; color: #F1F5F9; margin: 0; display: flex; min-height: 100vh; }
        .sidebar { width: 260px; background: #1E293B; border-right: 1px solid rgba(255,255,255,0.05); display: flex; flex-direction: column; }
        .main-content { flex: 1; padding: 32px; overflow-y: auto; }
        .card { background: #1E293B; border: 1px solid rgba(255,255,255,0.05); border-radius: 12px; padding: 24px; margin-bottom: 24px; }
        .btn { padding: 10px 16px; border-radius: 8px; border: none; font-weight: 500; cursor: pointer; transition: all 0.2s; color: white; }
        .btn-primary { background: #6366F1; }
        .btn-primary:hover { background: #4F46E5; }
        .btn-danger { background: #EF4444; }
        .btn-danger:hover { background: #DC2626; }
        input { width: 100%; padding: 10px; background: #0F172A; border: 1px solid rgba(255,255,255,0.1); border-radius: 8px; color: white; margin-bottom: 16px; }
        label { display: block; margin-bottom: 8px; color: #94A3B8; font-size: 14px; }
        table { width: 100%; border-collapse: collapse; }
        th { text-align: left; color: #94A3B8; font-weight: 500; padding: 12px; border-bottom: 1px solid rgba(255,255,255,0.1); }
        td { padding: 16px 12px; border-bottom: 1px solid rgba(255,255,255,0.05); font-family: 'JetBrains Mono', monospace; font-size: 13px; }
        code { background: #334155; padding: 4px 6px; border-radius: 4px; color: #E2E8F0; }
    </style>
</head>
<body>
    <%- include('partials/sidebar', { active: 'cron' }) %>

    <div class="main-content">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 32px;">
            <div>
                <h1 style="font-size: 24px; font-weight: 700; margin-bottom: 8px;">Cron Jobs</h1>
                <p style="color: #94A3B8;">Schedule automated tasks and scripts.</p>
            </div>
            <button onclick="document.getElementById('addModal').style.display='flex'" class="btn btn-primary">
                + New Job
            </button>
        </div>

        <div class="card">
            <table>
                <thead>
                    <tr>
                        <th width="150">Schedule</th>
                        <th>Command</th>
                        <th>Comment</th>
                        <th width="100" style="text-align: right;">Actions</th>
                    </tr>
                </thead>
                <tbody id="jobList">
                    <tr><td colspan="4" style="text-align: center; padding: 32px; color: #94A3B8;">Loading jobs...</td></tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Add Modal -->
    <div id="addModal" style="display: none; position: fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.8); align-items:center; justify-content:center;">
        <div class="card" style="width: 500px; padding: 32px;">
            <h2 style="margin-top: 0;">New Cron Job</h2>
            
            <label>Schedule (e.g. * * * * *)</label>
            <input type="text" id="scheduleInput" placeholder="* * * * *">
            <div style="font-size: 12px; color: #94A3B8; margin-bottom: 16px; margin-top: -12px;">Min, Hour, Day, Month, Weekday</div>
            
            <label>Command</label>
            <input type="text" id="commandInput" placeholder="php /var/www/site/artisan schedule:run">
            
            <label>Comment (Optional)</label>
            <input type="text" id="commentInput" placeholder="Daily Backup">

            <div style="display: flex; gap: 12px; margin-top: 16px;">
                <button class="btn btn-primary" onclick="addJob()" style="flex: 1;">Add Job</button>
                <button class="btn" onclick="document.getElementById('addModal').style.display='none'" style="background: #334155; flex: 1;">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        async function loadJobs() {
            try {
                const res = await axios.get('/cron/api/list');
                const tbody = document.getElementById('jobList');
                tbody.innerHTML = '';
                
                if (res.data.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="4" style="text-align: center; padding: 32px; color: #94A3B8;">No cron jobs scheduled.</td></tr>';
                    return;
                }

                res.data.forEach((job, index) => {
                    tbody.innerHTML += `
                        <tr>
                            <td><code>${job.schedule}</code></td>
                            <td><code>${job.command}</code></td>
                            <td style="color: #94A3B8; font-family: sans-serif;">${job.comment || '-'}</td>
                            <td style="text-align: right;">
                                <button class="btn btn-danger" onclick="deleteJob(${index})" style="padding: 6px 12px; font-size: 13px;">Delete</button>
                            </td>
                        </tr>
                    `;
                });
            } catch (err) {
                console.error(err);
                alert('Failed to load cron jobs');
            }
        }

        async function addJob() {
            const schedule = document.getElementById('scheduleInput').value;
            const command = document.getElementById('commandInput').value;
            const comment = document.getElementById('commentInput').value;

            if(!schedule || !command) return alert('Schedule and Command are required');

            try {
                await axios.post('/cron/api/add', { schedule, command, comment });
                document.getElementById('addModal').style.display = 'none';
                document.getElementById('scheduleInput').value = '';
                document.getElementById('commandInput').value = '';
                document.getElementById('commentInput').value = '';
                loadJobs();
            } catch (err) {
                alert('Failed to add job');
            }
        }

        async function deleteJob(index) {
            if(!confirm('Delete this cron job?')) return;
            try {
                await axios.post('/cron/api/delete', { index });
                loadJobs();
            } catch (err) {
                alert('Failed to delete job');
            }
        }

        loadJobs();
    </script>
</body>
</html>
