<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Webhooks - NexPanel</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
        body { font-family: 'Inter', sans-serif; background: #0F172A; color: #F1F5F9; margin: 0; display: flex; min-height: 100vh; }
        .sidebar { width: 260px; background: #1E293B; border-right: 1px solid rgba(255,255,255,0.05); display: flex; flex-direction: column; }
        .main-content { flex: 1; padding: 32px; overflow-y: auto; }
        .card { background: #1E293B; border: 1px solid rgba(255,255,255,0.05); border-radius: 12px; padding: 24px; margin-bottom: 24px; }
        .btn { padding: 10px 16px; border-radius: 8px; border: none; font-weight: 500; cursor: pointer; transition: all 0.2s; color: white; }
        .btn-primary { background: #6366F1; }
        .btn-primary:hover { background: #4F46E5; }
        .btn-danger { background: #EF4444; }
        .btn-danger:hover { background: #DC2626; }
        input, select { width: 100%; padding: 10px; background: #0F172A; border: 1px solid rgba(255,255,255,0.1); border-radius: 8px; color: white; margin-bottom: 16px; }
        table { width: 100%; border-collapse: collapse; }
        th { text-align: left; color: #94A3B8; font-weight: 500; padding: 12px; border-bottom: 1px solid rgba(255,255,255,0.1); }
        td { padding: 16px 12px; border-bottom: 1px solid rgba(255,255,255,0.05); }
        .url-box { background: #0F172A; padding: 8px; border-radius: 4px; font-family: monospace; font-size: 12px; color: #64748B; word-break: break-all; }
    </style>
</head>
<body>
    <%- include('partials/sidebar', { active: 'webhooks' }) %>

    <div class="main-content">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 32px;">
            <div>
                <h1 style="font-size: 24px; font-weight: 700; margin-bottom: 8px;">Git Webhooks</h1>
                <p style="color: #94A3B8;">Auto-deploy your sites on Git push.</p>
            </div>
            <button onclick="openModal()" class="btn btn-primary">
                + Create Webhook
            </button>
        </div>

        <div class="card">
            <table>
                <thead>
                    <tr>
                        <th>Website</th>
                        <th>Payload URL</th>
                        <th>Last Triggered</th>
                        <th>Status</th>
                        <th style="text-align: right;">Actions</th>
                    </tr>
                </thead>
                <tbody id="webhookList">
                    <tr><td colspan="5" style="text-align: center; padding: 32px; color: #94A3B8;">Loading...</td></tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create Modal -->
    <div id="createModal" style="display: none; position: fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.8); align-items:center; justify-content:center;">
        <div class="card" style="width: 400px; padding: 32px;">
            <h2 style="margin-top: 0;">Create Webhook</h2>
            
            <label>Select Website</label>
            <select id="websiteSelect">
                <option value="">Loading...</option>
            </select>
            
            <div id="newWebhookDetails" style="display: none; margin-top: 16px; background: rgba(99, 102, 241, 0.1); padding: 16px; border-radius: 8px; border: 1px solid rgba(99, 102, 241, 0.2);">
                <label>Payload URL</label>
                <div class="url-box" id="payloadUrlDisplay"></div>
                <label>Secret</label>
                <div class="url-box" id="secretDisplay"></div>
                <p style="font-size: 11px; color: #94A3B8; margin-bottom: 0;">Add these to your GitHub Repo Settings -&gt; Webhooks</p>
            </div>

            <div style="display: flex; gap: 12px; margin-top: 16px;">
                <button id="createBtn" class="btn btn-primary" onclick="createWebhook()" style="flex: 1;">Generate URL</button>
                <button class="btn" onclick="closeModal()" style="background: #334155; flex: 1;">Close</button>
            </div>
        </div>
    </div>

    <script>
        async function loadWebhooks() {
            try {
                const res = await axios.get('/webhooks/api/list');
                const tbody = document.getElementById('webhookList');
                tbody.innerHTML = '';

                if (res.data.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="5" style="text-align: center; padding: 32px; color: #94A3B8;">No webhooks created.</td></tr>';
                    return;
                }

                res.data.forEach(wh => {
                    const webhookUrl = `${window.location.origin}/webhooks/trigger/${wh.id}`;
                    tbody.innerHTML += `
                        <tr>
                            <td>${wh.website_name}</td>
                            <td><div class="url-box">${webhookUrl}</div></td>
                            <td>${wh.last_triggered ? new Date(wh.last_triggered).toLocaleString() : '-'}</td>
                            <td>${wh.last_status || '-'}</td>
                            <td style="text-align: right;">
                                <button class="btn btn-danger" onclick="deleteWebhook(${wh.id})" style="padding: 6px 12px; font-size: 13px;">Delete</button>
                            </td>
                        </tr>
                    `;
                });
            } catch (err) {
                console.error(err);
                alert('Failed to load webhooks');
            }
        }

        async function openModal() {
            document.getElementById('createModal').style.display = 'flex';
            document.getElementById('newWebhookDetails').style.display = 'none';
            document.getElementById('createBtn').disabled = false;
            
            // Load websites
            const res = await axios.get('/api/websites');
            const select = document.getElementById('websiteSelect');
            select.innerHTML = '';
            res.data.forEach(w => {
                 select.innerHTML += `<option value="${w.id}">${w.name}</option>`;
            });
        }

        function closeModal() {
            document.getElementById('createModal').style.display = 'none';
            loadWebhooks();
        }

        async function createWebhook() {
            const websiteId = document.getElementById('websiteSelect').value;
            if(!websiteId) return;

            try {
                const res = await axios.post('/webhooks/api/create', { website_id: websiteId });
                
                document.getElementById('newWebhookDetails').style.display = 'block';
                document.getElementById('payloadUrlDisplay').textContent = res.data.url;
                document.getElementById('secretDisplay').textContent = res.data.secret;
                document.getElementById('createBtn').disabled = true;

            } catch (err) {
                alert('Failed to create webhook');
            }
        }

        async function deleteWebhook(id) {
            if(!confirm('Delete this webhook?')) return;
            try {
                await axios.post('/webhooks/api/delete', { id });
                loadWebhooks();
            } catch (err) {
                alert('Failed to delete webhook');
            }
        }

        loadWebhooks();
    </script>
</body>
</html>
