<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redis - NexPanel</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
        body { font-family: 'Inter', sans-serif; background: #0F172A; color: #F1F5F9; margin: 0; display: flex; min-height: 100vh; }
        .sidebar { width: 260px; background: #1E293B; border-right: 1px solid rgba(255,255,255,0.05); display: flex; flex-direction: column; }
        .main-content { flex: 1; padding: 32px; overflow-y: auto; }
        .card { background: #1E293B; border: 1px solid rgba(255,255,255,0.05); border-radius: 12px; padding: 24px; margin-bottom: 24px; }
        .btn { padding: 10px 16px; border-radius: 8px; border: none; font-weight: 500; cursor: pointer; transition: all 0.2s; color: white; }
        .btn-primary { background: #6366F1; }
        .btn-primary:hover { background: #4F46E5; }
        .btn-danger { background: #EF4444; }
        .btn-danger:hover { background: #DC2626; }
        
        .stat-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 24px; margin-bottom: 32px; }
        .stat-card { background: #0F172A; padding: 20px; border-radius: 8px; border: 1px solid rgba(255,255,255,0.05); }
        .stat-label { color: #94A3B8; font-size: 13px; margin-bottom: 8px; }
        .stat-value { font-size: 24px; font-weight: 700; color: #F1F5F9; }
        .status-online { color: #34D399; }
        .status-offline { color: #F87171; }
    </style>
</head>
<body>
    <%- include('partials/sidebar', { active: 'redis' }) %>

    <div class="main-content">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 32px;">
            <div>
                <h1 style="font-size: 24px; font-weight: 700; margin-bottom: 8px;">Redis Manager</h1>
                <p style="color: #94A3B8;">In-memory data structure store.</p>
            </div>
            <div style="display: flex; gap: 12px;">
                <button onclick="restartRedis()" class="btn btn-primary">Restart</button>
                <button onclick="flushRedis()" class="btn btn-danger">Flush All Data</button>
            </div>
        </div>

        <div class="card">
            <h3 style="margin-top: 0; margin-bottom: 24px;">Server Status: <span id="statusText">Checking...</span></h3>
            
            <div class="stat-grid">
                <div class="stat-card">
                    <div class="stat-label">Used Memory</div>
                    <div class="stat-value" id="usedMem">-</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Connected Clients</div>
                    <div class="stat-value" id="clients">-</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Uptime</div>
                    <div class="stat-value" id="uptime">-</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Total Commands</div>
                    <div class="stat-value" id="commands">-</div>
                </div>
            </div>
            
            <div style="font-size: 13px; color: #64748B;">Redis Version: <span id="version">-</span></div>
        </div>
    </div>

    <script>
        async function loadInfo() {
            try {
                const res = await axios.get('/redis/api/info');
                const data = res.data;

                if (data.status === 'offline') {
                    document.getElementById('statusText').textContent = 'OFFLINE';
                    document.getElementById('statusText').className = 'status-offline';
                    return;
                }

                document.getElementById('statusText').textContent = 'ONLINE';
                document.getElementById('statusText').className = 'status-online';
                
                document.getElementById('usedMem').textContent = data.used_memory_human;
                document.getElementById('clients').textContent = data.connected_clients;
                document.getElementById('uptime').textContent = data.uptime_days + ' days';
                document.getElementById('commands').textContent = parseInt(data.total_commands_processed).toLocaleString();
                document.getElementById('version').textContent = data.version;

            } catch (err) {
                console.error(err);
                document.getElementById('statusText').textContent = 'ERROR';
                document.getElementById('statusText').className = 'status-offline';
            }
        }

        async function flushRedis() {
            if(!confirm('DANGER: This will delete ALL data in Redis. Are you sure?')) return;
            try {
                await axios.post('/redis/api/flush');
                alert('Redis flushed successfully');
                loadInfo();
            } catch (err) {
                alert('Failed to flush Redis');
            }
        }

        async function restartRedis() {
            if(!confirm('Are you sure you want to restart the Redis service?')) return;
            try {
                await axios.post('/redis/api/restart');
                alert('Redis is restarting...');
                setTimeout(loadInfo, 2000);
            } catch (err) {
                alert('Failed to restart Redis');
            }
        }

        loadInfo();
        setInterval(loadInfo, 5000);
    </script>
</body>
</html>
