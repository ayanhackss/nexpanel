NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_USER=panel_admin
DB_PASSWORD=change_this_password
DB_NAME=hosting_panel

# Session Secret (generate a random 32+ character string)
SESSION_SECRET=change-this-secret-in-production-min-32-chars-long

# Admin Credentials (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# Panel Configuration
PANEL_NAME=Hosting Panel
PANEL_URL=http://localhost:8080

# Resource Limits
MAX_WEBSITES=15
MAX_DATABASES=50
MAX_PHP_CHILDREN=5
MAX_NODE_MEMORY=256
MAX_PYTHON_WORKERS=2

# Backup Configuration
BACKUP_DIR=/var/backups/hosting-panel
BACKUP_RETENTION_DAYS=7

# Security
ENABLE_2FA=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/hosting-panel/app.log
